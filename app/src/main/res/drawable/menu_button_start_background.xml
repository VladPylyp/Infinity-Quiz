<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- View background color -->
    <gradient android:startColor="@color/menu_button_background_color"
        android:centerColor="@color/menu_button_start_background_mid_color"
        android:endColor="@color/menu_button_start_background_end_color"
        android:type="radial"
        android:gradientRadius="100dp"
    />

    <!-- View border color and width -->
    <stroke
        android:width="5dp"
        android:color="@color/menu_button_stroke_color" >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="1dp"   >
    </corners>

</shape>